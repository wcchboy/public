<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/projected_screen_float_bg"
        android:padding="6dp">
        <ImageView
            android:id="@+id/pr_sc_fl_icon_iv"
            android:layout_width="24dp"
            android:layout_height="12dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:src="@drawable/icon_beto"
            />
        <Chronometer
            android:id="@+id/pr_sc_fl_icon_iv_chronometer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:textSize="7sp"
            android:text="0:00"
            android:layout_gravity="center"
            app:layout_constraintLeft_toRightOf="@id/pr_sc_fl_icon_iv"
            app:layout_constraintRight_toLeftOf="@id/setting_screen_projection_iv"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"

            />
        <ImageView
            android:id="@+id/setting_screen_projection_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_arrow_down"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintTop_toBottomOf="parent"
            />

</androidx.constraintlayout.widget.ConstraintLayout>