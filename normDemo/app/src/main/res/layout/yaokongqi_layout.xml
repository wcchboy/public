<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:id="@+id/lin1"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_weight="1"
            android:focusable="true"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/btn1"
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:text="111"
                android:focusable="true"/>
            <TextView
                android:id="@+id/btn2"
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:text="222"
                android:focusable="true"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn5"
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:text="555"
                android:focusable="true"/>
            <ImageView
                android:id="@+id/btn6"
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:text="666"
                android:src="@drawable/checking"
                android:focusable="true"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/lin2"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:focusable="true">
            <TextView
                android:id="@+id/btn3"
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:text="333"
                android:focusable="true"/>
            <TextView
                android:id="@+id/btn4"
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:text="444"
                android:focusable="true"
                />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn7"
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:text="777"
                android:focusable="true"/>
            <ImageView
                android:id="@+id/btn8"
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:text="888"
                android:src="@drawable/checking"
                android:focusable="true"/>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:id="@+id/lin3"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_weight="1"
            android:focusable="true"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/btn9"
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:text="999"
                android:focusable="true"/>
            <TextView
                android:id="@+id/btn10"
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:text="100"
                android:focusable="true"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn11"
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:text="11 11 11"
                android:focusable="true"/>
            <ImageView
                android:id="@+id/btn12"
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:text="12 12 12"
                android:src="@drawable/checking"
                android:focusable="true"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/lin4"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:focusable="true">
            <TextView
                android:id="@+id/btn13"
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:text="13 13 13"
                android:focusable="true"/>
            <TextView
                android:id="@+id/btn14"
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:text="14 14 14 "
                android:focusable="true"
                />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn15"
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:text="15 15 15 "
                android:focusable="true"/>
            <ImageView
                android:id="@+id/btn16"
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:text="16 16 16"
                android:src="@drawable/checking"
                android:focusable="true"/>
        </LinearLayout>
    </LinearLayout>




</LinearLayout>